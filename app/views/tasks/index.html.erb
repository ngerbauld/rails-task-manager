<h1>Tasks</h1>
<% @tasks.each do |task| %>
<li>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete task", task_path(task.id), method: :delete %>
  <%= task.title %>
</li>
<% end %>
<p><%= link_to "Add new task", tasks_new_path %></p>

